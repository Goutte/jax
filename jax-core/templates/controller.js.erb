//= require controllers/application_controller

(function() {
  function <%= class_name %>() {
    <%= Rails.application.class.name %>.ApplicationController.call(this);
  };

  Jax.controllers.add("<%= class_name %>", <%= class_name %>);
  <%= Rails.application.class.name %>.<%= class_name %> = <%= class_name %>;

  <%= class_name %>.prototype = new ApplicationController();

  <%- actions.each do |action| -%>
  <%= class_name %>.prototype.<%= action%> = function() {
    // Action body here
  };

  <%- end -%>
})();
