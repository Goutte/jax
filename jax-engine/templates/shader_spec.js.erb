describe("Jax.Material.<%= class_name %>", function() {
  var material, mesh;

  beforeEach(function() { mesh = new Jax.Mesh.Quad(); });

  describe("stand-alone", function() {
    beforeEach(function() {
      mesh.material = new Jax.Material.Custom({
        layers: [{
          type: '<%= class_name %>'
        }]
      });
    });

    it("should render without error", function() {
      expect(function() { mesh.render(this.context); }).not.toThrow();
    });
  });
});
